import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        String s=in.nextLine();
        int c=0;
        String w[]=s.split(" ");
        for(int i=0;i<w.length;i++){
            String word=w[i];
            if(word.charAt(0)==word.charAt(word.length()-1)){
                c++;
            }
        }
        System.out.print(c);
    }
}
