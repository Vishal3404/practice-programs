import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        int st=in.nextInt();
        int lt=in.nextInt();
        int sum=st;
        for(int i=st+1;i<=lt;i++){
            sum=sum+i;
        }
        System.out.print(sum);
    }
}
